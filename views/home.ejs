
<%- include("partials/header"); -%>
    <h1>Blog</h1>
    <p> <%= startingContent %> </p>


  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>


    <% }) %>
    <form action="/compose" class="inline">
      <div style="float: right;"">
        <button class="btn btn-primary float-right submit-button" >Compose</button>
      </div>

</form>



